<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyTicketDetails">

    <Button
        android:id="@+id/buttonBuyBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollViewBuy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonBuyContactSeller"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBuyBack">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textViewBuySport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sport"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewBuySportSelected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sport Selected"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textViewBuyGame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Game"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewBuyGameSelected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Game Selected"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textViewBuySection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Section"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewBuySectionSelected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Section Selected"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textViewBuyRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Row"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewBuyRowSelected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Row Selected"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textViewBuyQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quantity"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewBuyQuantitySelected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quantity Selected"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textViewBuyPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewBuyPriceSelected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price Selected"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textViewBuyStudentTicket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="Student Ticket"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewBuyStudentTicketSelected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yes/No"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textViewBuyValidated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Validated"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewBuyValidatedSelected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yes/No"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewBuyNegotiable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Negotiable"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewBuyNegotiableSelected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yes/No"
                    android:textSize="18sp" />

            </TableRow>

        </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonBuyContactSeller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="Contact Seller"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/id_Navbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/id_Navbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/nav_botton_menu" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>