<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gameItem_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#36383333"
    android:padding="8dp">

    <TextView
        android:id="@+id/textView_game_date"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="Oct 25"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView_game_opponent"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"
        android:layout_toRightOf="@id/textView_game_date"
        android:gravity="center"
        android:text="Michigan State"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView_game_available"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"
        android:layout_toRightOf="@id/textView_game_opponent"
        android:gravity="center"
        android:text="114"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView_game_price_min"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"
        android:layout_toRightOf="@id/textView_game_available"
        android:gravity="center"
        android:text="$25"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView_game_price_avg"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"
        android:layout_toRightOf="@id/textView_game_price_min"
        android:gravity="center"
        android:text="$27"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView_game_price_max"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"
        android:layout_toRightOf="@id/textView_game_price_avg"
        android:gravity="center"
        android:text="$29"
        android:textColor="#000"
        android:textSize="17sp" />
</RelativeLayout>